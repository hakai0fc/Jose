-- Load base do hub
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/hakaiofc/Base/main/HUBORION'))()

-- Janela principal do hub
local Window = OrionLib:MakeWindow({
    Name = "Franklin Farm",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrionTest",
    IntroEnabled = false
})

-- ANTI AFK
pcall(function()
    local VirtualUser = game:service'VirtualUser'
    game:service'Players'.LocalPlayer.Idled:connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
end)

-- GLOBALS
local LP = game.Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

_G.AutoHealth = false
_G.AutoDumbell = false
_G.AutoStamina = false
_G.AutoStamina2 = false
_G.AutoStamina3 = false

-- Função AutoHealth
function AutoHealth()
    task.spawn(function()
        while _G.AutoHealth do
            local args = {
                [1] = "GiveHealthCuzPro",
                [2] = 3,
                [3] = 1
            }
            local remoteEvent = ReplicatedStorage:WaitForChild("Lutero")
            remoteEvent:FireServer(unpack(args))
            task.wait(0.1)
        end
    end)
end

-- Função AutoStamina
function AutoStamina()
    task.spawn(function()
        while _G.AutoStamina do
            for _ = 1, 5 do
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
            end
            task.wait(0.1)
        end
    end)
end

-- Função AutoStamina2
function AutoStamina2()
    task.spawn(function()
        while _G.AutoStamina2 do
            for _ = 1, 5 do
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
            end
            task.wait(0.1)
        end
    end)
end

-- Função DumbellOP
function DumbellOP()
    task.spawn(function()
        local LP = game.Players.LocalPlayer
        
        _G.AutoDumbell = true -- Ativa o loop (você pode mudar isso para false quando quiser parar)
        
        for i = 1, 1 do
            task.spawn(function()
                while _G.AutoDumbell do
                    local dumbell = LP.Character and LP.Character:FindFirstChild("Dumbell")
                    if dumbell then
                        local dumbellEvent = dumbell:FindFirstChild("Event")
                        if dumbellEvent then
                            dumbellEvent:FireServer()
                        end
                    end
                    task.wait(0.00029888)
                end
            end)
        end

-- Função AutoStamina3
function AutoStamina3()
    task.spawn(function()
        while _G.AutoStamina3 do
            for _ = 1, 5 do
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
                ReplicatedStorage.AddStaminaEvent:FireServer(250)
            end
            task.wait(0.1)
        end
    end)
end

-- Aba 1
local FarmTab = Window:MakeTab({
    Name = "FARME",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

FarmTab:AddSection({ Name = "Pos aba" })

FarmTab:AddToggle({
    Name = "Auto-Health",
    Default = false,
    Callback = function(Value)
        _G.AutoHealth = Value
        if Value then AutoHealth() end
    end
})

FarmTab:AddToggle({
    Name = "Auto-Dumbell",
    Default = false,
    Callback = function(Value)
        _G.AutoDumbell = Value
        if Value then DumbellOP() end
    end
})

-- Aba 2
local AutoTab = Window:MakeTab({
    Name = "StaminaOP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

AutoTab:AddSection({ Name = "Pos aba2" })

AutoTab:AddToggle({
    Name = "Auto-Stamina",
    Default = false,
    Callback = function(Value)
        _G.AutoStamina = Value
        if Value then AutoStamina() end
    end
})

AutoTab:AddToggle({
    Name = "Auto-Stamina2",
    Default = false,
    Callback = function(Value)
        _G.AutoStamina2 = Value
        if Value then AutoStamina2() end
    end
})

AutoTab:AddToggle({
    Name = "Auto-Stamina3",
    Default = false,
    Callback = function(Value)
        _G.AutoStamina3 = Value
        if Value then AutoStamina3() end
    end
})

-- Aba de Funções Extras
local InfiniteYieldTab = Window:MakeTab({
    Name = "FUNÇÕES A+",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

InfiniteYieldTab:AddSection({ Name = "FUNÇÕES A+" })

InfiniteYieldTab:AddButton({
    Name = "InfiniteYield",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/hakaiofc/EdgeIYinfiniteyield/main/mastersource'))()
    end
})
